@model ASI.Basecode.Services.ServiceModels.LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@using static ASI.Basecode.Resources.Views.Button
@using static ASI.Basecode.Resources.Messages.Errors
@{
    Layout = null;
    ViewData["Title"] = "TickeTechy";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Help Desk</title>
    <!-- External Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" />

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <link rel="icon" href="~/images/TicketTechy Logo.jpeg" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">



    <!-- Inline CSS -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Noto Sans', sans-serif;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.85)), url('https://wac.co.jp/wp-content/uploads/2024/05/bp-contact-img.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            color: #fff;
        }

        .form-container {
            background-color: rgba(228, 244, 254, 0.4);
            border-radius: 0.75rem;
            width: 340px;
            padding: 2rem;
            text-align: center;
        }

        .logo {
            width: 100px;
            margin-bottom: 1rem;
        }

        .title {
            font-size: 2rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-align: center;
            margin-bottom: 1rem;
        }

        label {
            color: black;
        }

        .tagline {
            font-size: 1.1rem;
            color: rgba(228, 244, 254, 1);
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }

        .input-group {
            position: relative;
            margin-bottom: 1rem;
            text-align: left;
        }

            .input-group label {
                display: block;
                color: black;
                margin-bottom: 0.2rem;
            }

            .input-group input {
                border-radius: 0.375rem;
                border: 1px solid rgba(55, 65, 81, 1);
                outline: 0;
                background-color: rgba(255, 255, 255, 0.2);
                padding: 0.75rem 1rem;
                color: darkblue;
                width: 100%;
            }

                .input-group input:focus {
                    border-color: rgba(167, 139, 250);
                }

            .input-group .eye-icon {
                position: absolute;
                top: 65%;
                right: 0.5rem;
                transform: translateY(-50%);
                cursor: pointer;
                color: rgba(243, 244, 246, 1);
            }

        .forgot {
            text-align: right;
            line-height: 1rem;
            margin: 8px 0 14px 0;
        }

            .forgot a {
                color: rgba(243, 244, 246, 1);
                text-decoration: none;
                font-size: 14px;
            }

                .forgot a:hover {
                    color: rgba(167, 139, 250, 1);
                    text-decoration: underline;
                }

        .sign-in {
            display: block;
            width: 100%;
            background-color: #e4f4fe;
            padding: 0.75rem;
            text-align: center;
            color: rgba(17, 24, 39, 1);
            border: none;
            border-radius: 0.375rem;
            font-weight: 500;
            font-size: 1rem;
            margin-top: 1.5rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .sign-in:hover {
                background-color: #c5e6fa;
            }

        .social-messages {
            display: flex;
            align-items: center;
            padding-top: 1.5rem;
        }

        .line {
            height: 2px;
            flex: 1 1 0%;
            background-color: rgba(55, 65, 81, 1);
        }

        .social-messages .message {
            padding: 0 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.25rem;
            letter-spacing: 0.5px;
            color: rgba(156, 163, 175, 1);
        }

        .icons {
            display: flex;
            justify-content: center;
            gap: 0.8rem;
            margin-top: 0.5rem;
        }

            .icons i {
                border-radius: 0.125rem;
                padding: 0.75rem;
                border: none;
                background-color: transparent;
                font-size: 1.8rem;
            }

        .sign-up {
            text-align: center;
            font-size: 0.9rem;
            color: rgba(156, 163, 175, 1);
            margin-top: 0.5rem;
        }

            .sign-up a {
                color: rgba(243, 244, 246, 1);
                text-decoration: none;
            }

                .sign-up a:hover {
                    color: rgba(167, 139, 250, 1);
                    text-decoration: underline;
                }

        .modal {
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background-color: #e4f4fe;
            padding: 20px;
            border-radius: 8px;
            width: 400px;
            text-align: center;
        }

        .modal-title {
            color: black;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 1.5rem;
            font-weight: bold;
            cursor: pointer;
        }

        /* Spinner styles */
        /* Spinner styles */
        #otpLoader {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1050; /* Ensure it is above the modal */
            text-align: center;
        }

            #otpLoader .spinner {
                border: 4px solid #f3f3f3; /* Light grey */
                border-top: 4px solid #3498db; /* Blue */
                border-radius: 50%;
                width: 40px;
                height: 40px;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Message style */
        #otpLoader p {
            margin-top: 10px;
            font-size: 14px;
            color: #333;
        }

        /* Optional backdrop for focus effect */
        #otpLoaderBackdrop {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Semi-transparent black backdrop */
            z-index: 1049; /* Just behind the loader */
        }

    </style>
</head>
<body>
    <div class="form-container">
        <!-- Add logo above the Login title -->
        <img src="~/images/TickeTechy logo with text.png" alt="TicketTechy Logo" class="logo" style="width: 250px; border-radius: 30px;" />
        <h1 class="title">@Login</h1>
        <p class="tagline">@Tagline</p>
        <form class="form" action="/Account/Login" method="post">
            <div asp-validation-summary="ModelOnly" style="color: red !important;"></div>
            <div class="input-group">
                <label for="email">@Email <span style="color: red;">@Asterisk</span></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" style="color: red !important;"></span>
            </div>
            <div class="input-group">
                <label for="password">@Password <span style="color: red;">@Asterisk</span></label>
                <input asp-for="Password" type="password" class="form-control" id="password" />
                <i class="fa fa-eye eye-icon" id="togglePassword" onclick="togglePassword()"></i>
                <span asp-validation-for="Password" style="color: red !important;"></span>
            </div>
            <div class="forgot">
                <a href="#">@ForgotPass</a>
            </div>
            <button type="submit" class="sign-in">@SignInBtn</button>
            <p class="sign-up">
                @DontHaveAcc <a asp-controller="Account" asp-action="Register">@SignUpBtn</a>
            </p>
        </form>
    </div>

    <!-- Forgot Password Modal -->
    <div id="forgotPasswordModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close" id="closeModal">&times;</span>
            <h2 class="modal-title">@ForgotPassword</h2>
            <p id="modalMessage" style="color: dimgrey;">@EnterRegisteredEmailForOTP</p>

            <!-- Email Input -->
            <div class="input-group" id="emailGroup">
                <label for="forgot-email" style="color: black;">@Email <span style="color: red;">@Asterisk</span> </label>
                <input type="email" id="forgot-email" class="form-control" style="color: darkblue;" required />
                <span id="emailError" style="color: red; display: none;">@InvalidEmail</span>
            </div>

            <!-- OTP Input (Hidden by default) -->
            <div class="input-group" id="otpGroup" style="display: none;">
                <label style="color: black;" for="otp">@EnterOTP</label>
                <input style="color: black;" type="text" id="otp" class="form-control" maxlength="6" required />
                <span id="otpError" style="color: red; display: none;">@InvalidOTP</span>
            </div>

            <!-- New Password Input (Hidden by default) -->
            <div class="input-group" id="newPasswordGroup" style="display: none;">
                <label style="color:black;" for="newPassword">@NewPass</label>
                <input style="color: black;" type="password" id="newPassword" class="form-control" required />
            </div>

            <!-- Confirm Password Input (Hidden by default) -->
            <div class="input-group" id="confirmPasswordGroup" style="display: none;">
                <label style="color:black;" for="confirmPassword">@ConfirmPass</label>
                <input style="color: black;" type="password" id="confirmPassword" class="form-control" required />
                <span id="passwordError" style="color: red; display: none;">@PassDoNotMatch</span>
            </div>

            <!-- Submit Button -->
            <button id="sendOTP" class="sign-in">@SendOTPBtn</button>
            <button id="resetPassword" class="sign-in" style="display: none;">@ResetPassBtn</button>
        </div>
    </div>

    <div id="otpLoaderBackdrop"></div>

    <!-- Custom Loader: initially hidden -->
    <div id="otpLoader">
        <div class="spinner"></div>
        <p>@SendingOtpLoading</p>
    </div>





    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('togglePassword');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        $(document).ready(function () {

            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }

            var successMessage = '@TempData["success"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
            var otpSent = false; // flag to check if OTP is sent
            var otpVerified = false; // flag to check if OTP is verified
            var interval = null;
            var otpCode = 0;
            var emailToSend;

            // Show modal on "Forgot password?" click
            $('.forgot a').on('click', function (e) {
                e.preventDefault();
                $('#forgotPasswordModal').fadeIn();
            });

            // Close modal when "X" is clicked
            $('#closeModal').on('click', function () {
                $('#forgotPasswordModal').fadeOut();
                resetModal(); // Reset modal contents
            });

            // Handle OTP send and form validation
            $('#sendOTP').on('click', function (e) {
                e.preventDefault();

                if (!otpSent) {
                    // Validate email
                    var email = $('#forgot-email').val();

                    // Disable button to prevent spam clicks
                    $(this).attr('disabled', true);
                    setTimeout(function () {
                        $('#sendOTP').attr('disabled', false); // Re-enable after 5 seconds
                    }, 5000);

                    $('#otpLoader').show();
                    $('#otpLoaderBackdrop').show();
                    clearInterval(interval);

                    // Send email through AJAX
                    $.ajax({
                        url: '/Account/SendOTP',
                        type: 'POST',
                        data: { email: email },
                        success: function (response) {
                            $('#otpLoader').hide();
                            $('#otpLoaderBackdrop').hide();
                            if (response.success) {
                                otpSent = true;
                                $('#otpGroup').fadeIn(); // Show OTP input
                                $('#emailError').hide();

                                startInterval();
                            } else {
                                if (response.message == "Invalid email format.") {
                                    $('#emailError').show();
                                } else {
                                    alert(response.message);
                                }
                            }
                        },
                        error: function () {
                            alert('Error sending OTP. Try again later.');
                        }
                    });
                } else {
                    // Handle OTP verification (if OTP already sent)
                    var otp = $('#otp').val();
                    var email = $('#forgot-email').val();
                    if (otp.length === 6) {
                        $('#otpLoader p').text('Verifying OTP...');
                        $('#otpLoader').show();
                        $.ajax({
                            url: '/Account/VerifyOTP',
                            type: 'POST',
                            data: { otp: otp, email: email },
                            success: function (response) {
                                $('#otpLoader').hide();
                                $('#otpLoaderBackdrop').hide();
                                if (response.success) {
                                    otpVerified = true;
                                    otpCode = otp;
                                    emailToSend = email;
                                    $('#otpGroup').hide();
                                    $('#emailGroup').hide();
                                    $('#newPasswordGroup').fadeIn();
                                    $('#confirmPasswordGroup').fadeIn();
                                    $('#sendOTP').hide();
                                    $('#resetPassword').fadeIn(); // Show the Reset Password button
                                } else {
                                    $('#otpError').show(); // Show error if OTP is invalid
                                }
                            },
                            error: function () {
                                alert('Error verifying OTP. Try again later.');
                            }
                        });
                    } else {
                        $('#otpError').text('Please enter a valid 6-digit OTP.').show();
                    }
                }
            });

            // Handle password reset
            $('#resetPassword').on('click', function (e) {
                e.preventDefault();

                var newPassword = $('#newPassword').val();
                var confirmPassword = $('#confirmPassword').val();

                // Validate new passwords
                if (newPassword !== confirmPassword) {
                    $('#passwordError').show();
                    return;
                } else {
                    $('#passwordError').hide();
                }

                // Make an AJAX call to reset password
                $.ajax({
                    url: '/Account/ResetPassword',
                    type: 'POST',
                    data: { newPassword: newPassword, otpCode: otpCode, email: emailToSend },
                    success: function (response) {
                        if (response.success) {
                            alert('Password has been successfully reset!');
                            $('#forgotPasswordModal').fadeOut();
                            resetModal();
                        } else {
                            alert('Failed to reset password. Please try again.');
                        }
                    },
                    error: function () {
                        alert('Error resetting password. Try again later.');
                    }
                });
            });




            // Interval to enable the button again after a few seconds
            function startInterval() {
                var count = 10; // 10 seconds delay
                interval = setInterval(function () {
                    $('#sendOTP').text('Wait ' + count + 's');
                    count--;

                    if (count <= 0) {
                        clearInterval(interval);
                        $('#sendOTP').attr('disabled', false).text('Submit OTP');
                    }
                }, 1000);
            }

            // Reset modal content
            function resetModal() {
                $('#forgot-email').val('');
                $('#otp').val('');
                $('#newPassword').val('');
                $('#confirmPassword').val('');
                $('#emailError').hide();
                $('#otpError').hide();
                $('#passwordError').hide();
                $('#emailGroup').show();
                $('#otpGroup').hide();
                $('#newPasswordGroup').hide();
                $('#confirmPasswordGroup').hide();
                $('#sendOTP').show().text('Send OTP').attr('disabled', false);
                $('#resetPassword').hide();
                otpSent = false;
                otpVerified = false;
            }
        });


    </script>
</body>
</html>

@section scripts {
    <script>
        // Check for error message and display Toastr notification


        
    </script>
}