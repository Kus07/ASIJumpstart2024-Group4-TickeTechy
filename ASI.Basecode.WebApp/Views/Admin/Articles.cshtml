<style>
    .view-button {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: white;
        border: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 0.1rem solid black;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        transition-duration: 0.3s;
        overflow: hidden;
        position: relative;
        text-decoration: none !important;
    }

    .view-svgIcon {
        width: 17px;
        transition-duration: 0.3s;
    }

        .view-svgIcon path {
            fill: black;
        }

    .view-button:hover {
