@using static ASI.Basecode.Resources.Views.Screen
@using static ASI.Basecode.Resources.Views.Button
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- contact section start -->
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <h2>Where We Are Located</h2>
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&amp;q=UCLM+Mandaue" width="100%" height="500" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
            <button type="button" class="btn btn-primary mb-2" style="margin-top: -20%; border: 2px solid black;" data-bs-toggle="modal" data-bs-target="#contactModal">
                @ContactUs
            </button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">Send a Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="mail_section_1" style="width: 100% !important;">
                        <input type="text" class="mail_text form-control mb-3" placeholder="Name" name="Name">
                        <input type="text" class="mail_text form-control mb-3" placeholder="Phone Number" name="Phone Number">
                        <input type="text" class="mail_text form-control mb-3" placeholder="Email" name="Email">
                        <textarea class="massage-bt form-control mb-3" placeholder="Message" rows="5" id="comment" name="Message"></textarea>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mb-3">@SendBtn</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- contact section end -->
<!-- Bootstrap 5 JS (Make sure you have this included in your layout) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>