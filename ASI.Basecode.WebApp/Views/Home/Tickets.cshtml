<!-- Toggle Buttons -->
<div class="d-flex justify-content-start btn-toggle">
    <button id="openTicketsButton" class="btn btn-primary me-2">Open Tickets</button>
    <button id="closedTicketsButton" class="btn btn-outline-secondary">Closed Tickets</button>
    <button id="ongoingTicketsButton" class="btn btn-outline-secondary">Ongoing/Resolved Tickets</button>
</div>

