    $(document).ready(function () {
        $('#downloadReportPDF').on('click', function () {
            var $button = $(this);
            var $spinner = $('#loadingSpinner');
            var $buttonText = $('#buttonText');

            // Show spinner and hide button text
            $spinner.show();
            $buttonText.hide();

            $.ajax({
                url: '/File/DownloadTicketReport',
                type: 'GET',
                xhrFields: {
                    responseType: 'blob' // Important to receive the response as a blob
                },
                success: function (data, status, xhr) {
                    var filename = "";
                    var disposition = xhr.getResponseHeader('Content-Disposition');
                    if (disposition && disposition.indexOf('attachment') !== -1) {
                        var filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
                        var matches = filenameRegex.exec(disposition);
                        if (matches != null && matches[1]) filename = matches[1].replace(/['"]/g, '');
                    }

                    // Create a new Blob object using the response data
                    var blob = new Blob([data], { type: "application/pdf" });

                    // Create a link element, set the URL to the blob, and download
                    var link = document.createElement('a');
                    link.href = window.URL.createObjectURL(blob);
                    link.download = filename || 'TicketReport.pdf';
                    link.click();

                    // Reset button state
                    $spinner.hide();
                    $buttonText.show();
                },
                error: function () {
                    alert('Error downloading the report.');
                    // Reset button state
                    $spinner.hide();
                    $buttonText.show();
                }
            });
        });
    });

