@model ASI.Basecode.Data.Models.User
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>

    .settings-panel {
    background-color: #34495E;
    padding: 20px;
    width: 500px;
    border-radius: 8px;
    color: #ECF0F1;
    justify-content: center;
    }

    .setting {
    margin-bottom: 20px;
    }

    .setting label {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
    }

    .setting p {
    font-size: 12px;
    color: #BDC3C7;
    margin: 0 0 10px 0;
    }

    .toggle-switch {
    -webkit-appearance: none;
    appearance: none;
    width: 40px;
    height: 20px;
    background-color: #BDC3C7;
    border-radius: 10px;
    position: relative;
    cursor: pointer;
    outline: none;
    transition: background-color 0.3s ease;
    }

    .toggle-switch:checked {
    background-color: #E67E22;
    }

    .toggle-switch:before {
    content: "";
    position: absolute;
    width: 18px;
    height: 18px;
    background-color: #ECF0F1;
    border-radius: 50%;
    top: 1px;
    left: 1px;
    transition: transform 0.3s ease;
    }

    .toggle-switch:checked:before {
    transform: translateX(20px);
    }

    .slider {
    width: 100%;
    margin: 10px 0;
    }

    .checkbox-container {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #BDC3C7;
    }

    .checkbox-container input {
    margin-right: 5px;
    }

    .radio-input input {
    display: none;
    }

    .radio-input {
    --container_width: 300px;
    position: relative;
    display: flex;
    align-items: center;
    border-radius: 10px;
    background-color: #fff;
    color: #000000;
    width: var(--container_width);
    overflow: hidden;
    border: 1px solid rgba(53, 52, 52, 0.226);
    }

    .radio-input label {
    width: 100%;
    padding: 10px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    font-weight: 600;
    letter-spacing: -1px;
    font-size: 14px;
    }

    .selection {
    display: none;
    position: absolute;
    height: 100%;
    width: calc(var(--container_width) / 3);
    z-index: 0;
    left: 0;
    top: 0;
    transition: .15s ease;
    }

    .radio-input label:has(input:checked) {
    color: #fff;
    }

    .radio-input label:has(input:checked) ~ .selection {
    background-color: orange;
    display: inline-block;
    }

    .radio-input label:nth-child(1):has(input:checked) ~ .selection {
    transform: translateX(calc(var(--container_width) * 0/3));
    }

    .radio-input label:nth-child(2):has(input:checked) ~ .selection {
    transform: translateX(calc(var(--container_width) * 1/3));
    }

    .radio-input label:nth-child(3):has(input:checked) ~ .selection {
    transform: translateX(calc(var(--container_width) * 2/3));
    }
    .button-group {
    display: flex;
    justify-content: space-between;
    }

    button {
    width: 45%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    }

    #cancel-btn {
    background-color: #7F8C8D;
    color: #ECF0F1;
    }

    #save-btn {
    background-color: #E67E22;
    color: #ECF0F1;
    }

</style>
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">

    <div class="settings-panel">
        <div class="setting">
            <label>E-MAIL NOTIFACTIONS</label>
            <p>Automatically forwards notifications regarding ticket activity to your inbox.</p>
            <input type="checkbox" class="toggle-switch" id="email-notifications" @(ViewBag.EmailNotifications == true ? "checked" : "unchecked")>
        </div>


        @if (User.IsInRole("1"))
        {
            <div class="setting">
                <label>ARTICLE VIEW STYLE</label>
            <p>Select your preferred style for viewing articles.</p>
            <div class="radio-input">
                <label>
                    <input type="radio" id="value-1" name="articleViewSetting" value="1" @(ViewBag.ArticleViewSetting == 1 ? "checked" : "unchecked")>
                    <span>Standard</span>
                </label>
                <label>
                    <input type="radio" id="value-2" name="articleViewSetting" value="2" @(ViewBag.ArticleViewSetting == 2 ? "checked" : "unchecked")>
                    <span>Card</span>
                </label>
                <label>
                    <input type="radio" id="value-3" name="articleViewSetting" value="3" @(ViewBag.ArticleViewSetting == 3 ? "checked" : "unchecked")>
                    <span>Slideshow</span>
                </label>
                <span class="selection"></span>
            </div>
        </div>
        }

    <form asp-controller="Home" asp-action="SaveSettings" method="post">
    <div class="button-group">
        <input type="hidden" id="email-notifications-hidden" name="emailNotifications" />
        <input type="hidden" id="articleViewSetting-hidden" name="articleViewSetting" />
        <button id="save-btn" onclick="submitForm()">SAVE</button>
    </div>
    </form>
</div>
    </div>

<script>
    function submitForm() {
        var emailNotifications = document.getElementById("email-notifications").checked;
        var preferredViewStyle = document.querySelector('input[name="articleViewSetting"]:checked').value;
        document.getElementById("email-notifications-hidden").value = emailNotifications;
        document.getElementById("articleViewSetting-hidden").value = preferredViewStyle;
        document.querySelector("form").submit();
    }
</script>